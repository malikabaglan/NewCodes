<?xml version="1.0" encoding="UTF-8"?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MasterDetailPractice.MyMasterDetailPage"
                  MasterBehavior="Popover">
             
    <MasterDetailPage.Master>
        <ContentPage Padding="20" BackgroundColor="Aqua" Title="Master" Icon="hamburger.png"> 
            <ContentPage.Content>
                <StackLayout Margin="5,30,5,5">
                    <Label Text="Master Page"></Label>
                    <Button Text="Menu Item 1" BackgroundColor="Yellow" Clicked="Handle_Clicked"></Button>
                    <Button Text="Menu Item 2 " Clicked="Handle_Clicked_1" BackgroundColor="Yellow"></Button>
                </StackLayout>
            </ContentPage.Content>
        </ContentPage>
    </MasterDetailPage.Master>
    
<MasterDetailPage.Detail>
     <ContentPage Padding="20"> 
            <ContentPage.Content>
                <StackLayout Margin="5,30,5,5">
                    <Label Text="Detail Page"></Label>
                </StackLayout>
            </ContentPage.Content>
        </ContentPage>
    </MasterDetailPage.Detail>
    
    
</MasterDetailPage>
